{
    "name": "yappabe/docker-bolt",
    "require": {
        "bolt/bolt": "~2.2",
        "composer/composer": "1.0.*@dev",
        "ircmaxell/random-lib": "dev-master"
    },
    "authors": [
        {
            "name": "Joeri Verdeyen",
            "email": "joeriv@yappa.be"
        }
    ],
    "minimum-stability": "beta",
    "prefer-stable": true,
    "scripts": {
        "post-install-cmd": [
            "Bolt\\Composer\\ScriptHandler::installAssets"
        ],
        "post-update-cmd": [
            "Bolt\\Composer\\ScriptHandler::installAssets"
        ]
    },

    "extra":{
        "bolt-web-dir": "./public"
    }

}
